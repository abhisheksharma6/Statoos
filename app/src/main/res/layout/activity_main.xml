<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#ffffff"
   tools:context="com.vs.MainActivity">

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statoos"
        android:layout_gravity="center"
        android:textSize="40dp"
        android:layout_marginTop="10dp"
        android:textColor="#8784E4"
        />-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/statoos"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#8784E4"
        />


<LinearLayout
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    >
    <EditText
        android:id="@+id/str_id"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:hint="What's up?"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:inputType="textMultiLine"
        android:lines="8"
        android:layout_margin="20dp"
        android:gravity="start"
        android:padding="10dp"
        android:maxLines="8"
        android:background="@drawable/edittext_background"
        />

    <TextView
        android:id="@+id/numberOfCharacters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:text="250"
        />

    <Button
        android:id="@+id/btn_id"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:background="@drawable/buttonlayout"
        android:text="Save" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp" />



</LinearLayout>
</LinearLayout>


        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adViewMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-5946413716271057/6675827795">
        </com.google.android.gms.ads.AdView>



    </RelativeLayout>

    </ScrollView>
